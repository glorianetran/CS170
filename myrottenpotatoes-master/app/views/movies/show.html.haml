-# in app/views/movies/show.html.haml

%h2 Details about #{@movie.title}

%ul#details
  %li
    Rating:
    = @movie.rating
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")

%h3 Description:

%p#description= @movie.description

-# Our Edit link from previous example:
= link_to 'Edit info', edit_movie_path(@movie)
%p
-# This Delete link will not really be a link, but a form:
= link_to 'Delete', movie_path(@movie), :method => :delete
%p
= link_to 'Back to movie list', movies_path
%p
= link_to 'Add Review', new_movie_review_path(@movie)

%table#movies
  %thead
    %tr
      %th User
      %th Potatoes
      %th Comments
  %tbody
    - @reviews.each do |review|
      %tr
        %td= review.movieuser.name
        %td= review.potatoes 
        %td= review.comments